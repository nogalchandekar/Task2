@model LoginModel
@{
    Layout = null;
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
    }

    .login-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    input {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    button {
        background-color: #007bff;
        color: #fff;
        padding: 7px 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        button:hover {
            background-color: #0056b3;
        }
</style>

<h2>Login</h2>

    @using (Html.BeginForm("Login", "Accounts", FormMethod.Post))
    {
     <div class="login-container">
        @Html.AntiForgeryToken() 

        <div class="form-group">
            @Html.LabelFor(model => model.EmailID)
            @Html.TextBoxFor(model => model.EmailID, new { @class = "form-control" , placeholder="Enter EmailID" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.PasswordFor(model => model.Password, new { @class = "form-control" ,placeholder="Enter Password"})
        </div>

        <button type="submit" class="btn btn-primary">Login</button>

        @Html.ActionLink("Forget Password","ForgetPassword","Accounts"); <br>

        @Html.ActionLink("Regrister here","Regrister","Accounts");  <br><br>
      
        @ViewBag.error

     </div>

     }